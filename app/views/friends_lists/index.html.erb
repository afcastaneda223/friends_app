<p id="notice"><%= notice %></p>

<h1>Friends</h1>

<table class = "table table-striped table-bordered table-hover">
  <thead class = "table-dark"> 
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends_lists.each do |friends_list| %>
      <tr>
        <td><%= friends_list.first_name %></td>
        <td><%= friends_list.last_name %></td>
        <td><%= friends_list.email %></td>
        <td><%= friends_list.phone %></td>
        <td><%= friends_list.twitter %></td>
        <td><%= link_to 'Show', friends_list %></td>
        <td><%= link_to 'Edit', edit_friends_list_path(friends_list) %></td>
        <td><%= link_to 'Destroy', friends_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friends', new_friends_list_path, class:"btn btn-secondary" %>
